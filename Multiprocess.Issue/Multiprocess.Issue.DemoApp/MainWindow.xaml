<Window
    x:Class="Multiprocess.Issue.DemoApp.MainWindow"
    Title="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:userControls="clr-namespace:Multiprocess.Issue.DemoApp.UserControls"
    Height="800"
    Width="900">
    <Window.Resources>
        <telerik:BooleanConverter x:Key="BooleanConverter" />
        <telerik:InvertedBooleanConverter x:Key="InvertedBooleanConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch"
            Orientation="Horizontal">
            <RadioButton
                Margin="10,10,0,10"
                Content="VLC Player"
                IsChecked="{Binding IsVlcPlayer}" />
            <RadioButton
                Margin="10,10,0,10"
                Content="Window Media Player"
                IsChecked="{Binding
                    IsVlcPlayer,
                    Converter={StaticResource InvertedBooleanConverter}}" />
            <Button
                MinWidth="100"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Command="{Binding SetupCommand}"
                Content="Add New Video"
                IsEnabled="{Binding
                    IsBusy,
                    Converter={StaticResource InvertedBooleanConverter}}" />
        </StackPanel>
        <Grid
            x:Name="MainGrid"
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border
                Grid.Column="0"
                Grid.Row="0"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1">
                <ContentControl
                    x:Name="ContentControl0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
            </Border>
            <Border
                Grid.Column="1"
                Grid.Row="0"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1" />
            <Border
                Grid.Column="2"
                Grid.Row="0"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1" />
            <Border
                Grid.Column="3"
                Grid.Row="0"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1" />

            <Border
                Grid.Column="0"
                Grid.Row="1"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1">
                <ContentControl
                    x:Name="ContentControl4"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
            </Border>
            <Border
                Grid.Column="1"
                Grid.Row="1"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1" />
            <Border
                Grid.Column="2"
                Grid.Row="1"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1">
                <ContentControl
                    x:Name="ContentControl6"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
            </Border>
            <Border
                Grid.Column="3"
                Grid.Row="1"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1" />
            <Border
                Grid.Column="0"
                Grid.Row="2"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1">
                <ContentControl
                    x:Name="ContentControl8"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
            </Border>
            <Border
                Grid.Column="1"
                Grid.Row="2"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1" />
            <Border
                Grid.Column="2"
                Grid.Row="2"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1" />
            <Border
                Grid.Column="3"
                Grid.Row="2"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1">
                <ContentControl
                    x:Name="ContentControl11"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
            </Border>
            <Border
                Grid.Column="0"
                Grid.Row="3"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1" />
            <Border
                Grid.Column="1"
                Grid.Row="3"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1" />
            <Border
                Grid.Column="2"
                Grid.Row="3"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1" />
            <Border
                Grid.Column="3"
                Grid.Row="3"
                Margin="3"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="1" />

        </Grid>
    </Grid>
</Window>